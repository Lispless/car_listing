<h1>New Car Page</h1>

<%= form_for @car do |f| %>
	<% if @car.errors.any? %>
    <p> There were errors with your submission:</p>
    <ul>
      <% @car.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>
  <p>
    <%= f.label :manufacturer, 'Name of manufacturer' %><br>
    <%= f.text_field :manufacturer %><br>
  </p>
  <p>
    <%= f.label :color, 'Color' %><br>
    <%= f.text_field :color %>
  </p>
   <p>
    <%= f.label :year, 'Year' %><br>
    <%= f.text_field :year %>
  </p>
   <p>
    <%= f.label :mileage, 'Mileage' %><br>
    <%= f.text_field :mileage %>
  </p>
   <p>
    <%= f.label :description, 'Description' %><br>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit "Submit" %>
  </p>
<% end %>
